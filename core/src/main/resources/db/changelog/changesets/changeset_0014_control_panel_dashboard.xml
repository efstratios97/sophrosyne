<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="14" author="Efstratios Pahis">
        <createTable tableName="sophrosyne_control_panel_dashboard">
            <column name="id" type="varchar">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="control_panel_control_panel_dashboard">
            <column name="control_panel_dashboard_id" type="varchar">
                <constraints primaryKey="true" nullable="true"/>
            </column>
            <column name="control_panel_id" type="varchar">
                <constraints primaryKey="true" nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="FK_CONTROL_PANEL_DASHBOARD_ID_CONTROL_PANEL_ID"
                referencedTableName="sophrosyne_control_panel_dashboard"
                baseColumnNames="control_panel_dashboard_id"
                baseTableName="control_panel_control_panel_dashboard"
                referencedColumnNames="id"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="FK_CONTROL_PANEL_ID_CONTROL_PANEL_DASHBOARD_ID"
                referencedTableName="sophrosyne_control_panel"
                baseColumnNames="control_panel_id"
                baseTableName="control_panel_control_panel_dashboard"
                referencedColumnNames="id"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>