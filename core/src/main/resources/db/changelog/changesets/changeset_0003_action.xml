<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="3" author="Efstratios Pahis">
        <createTable tableName="sophrosyne_action">
            <column name="id" type="varchar">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="command" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="post_execution_log_file_path" type="varchar">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="action_apikey">
            <column name="id" type="varchar">
                <constraints primaryKey="true" nullable="true"/>
            </column>
            <column name="apikey" type="varchar">
                <constraints primaryKey="true" nullable="true"/>
            </column>
        </createTable>

        <addUniqueConstraint
                columnNames="id" tableName="sophrosyne_action"
                constraintName="ACTION_ACTION_APIKEY_ID"/>
        <addForeignKeyConstraint
                constraintName="FK_ACTION_ACTION_APIKEY"
                referencedTableName="sophrosyne_action"
                baseColumnNames="id"
                baseTableName="action_apikey" referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="FK_APIKEY_ACTION_APIKEY"
                referencedTableName="sophrosyne_apikey"
                baseColumnNames="apikey"
                baseTableName="action_apikey" referencedColumnNames="apikey"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>